<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <CheckBox
        android:id="@+id/cb_is_finish_in_lv"
        android:focusable="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:button="@drawable/checkbox_for_addpending_0"
        android:drawablePadding="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:background="#FFFFFF"
        />
    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_show_content_in_lv"
        android:gravity="left|center"
        android:maxLines="1"
        android:hint="设置日期时间设置日期时间设置日期时间设置日期时间设置日期时间设置日期时间设置日期时间设置日期时间设置日期时间"
        android:textSize="14sp"
        android:focusable="false"
        android:textColor="@color/text_clo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center|right">

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/tv_show_date_in_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4月19日"
            android:textSize="12dp"
            android:focusable="false"
            android:layout_marginRight="10dp"
            android:gravity="bottom|right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/tv_show_time_in_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textSize="12dp"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:gravity="bottom|right" />
        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/iv_loop_in_lv"
            android:layout_width="15dp"
            android:paddingTop="3dp"
            android:layout_gravity="right"
            android:layout_height="15dp"
            android:clickable="false"
            android:focusable="false"

            android:src="@mipmap/loop_picture"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>